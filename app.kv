<ScreenManagement>:
    id: sm
	
	MainScreen:
		id: main_screen
		name: "main_screen"
		
		BoxLayout:
			orientation: "vertical"
			MDToolbar:
				title: "ResistorCombinator"

			BoxLayout:
				size_hint_y: .13
				padding: [dp(10), dp(10), dp(10), dp(5)]

				spacing: dp(10)
				Image:
					size_hint_x: .2
					source: "images/resistor.png"
					pos_hint: {'center_x': .5}
				MDTextFieldRect:
					size_hint_x: .4
					text: app.value
					font_size: sp(self.height - sp(15))
					on_text:
						app.value = self.text
						app.resistor_change(dimension = None, tolerance = None)
				MDRaisedButton:
					id: dimension_button
					size_hint_x: .15
					size_hint_y: 1
					text: app.dimension
					on_release:
						app.dimension_menu.open(self)
				MDRaisedButton:
					id: tolerance_button
					size_hint_x: .15
					size_hint_y: 1
					text: app.tolerance
					on_release:
						app.tolerance_menu.open(self)
				MDTextFieldRect:
					size_hint_x: .2
					text: '0.125'
					font_size: sp(self.height - sp(15))
				MDLabel:
					size_hint_x: .05
					text: 'W'
			BoxLayout:
				size_hint_y: .2
				padding: [dp(10), dp(5), dp(10), dp(5)]
				spacing: dp(10)
				BoxLayout:
					orientation: 'vertical'
					size_hint_x: .3
					BoxLayout:
						Image:
							size_hint_x: .9
							source: "images/resistor_parallel.png"
						Check:
							id: chk_parallel
							group: 'group_connect'
                            pos_hint: {'center_y': .5}
                            active: True
					BoxLayout:
						Image:
							size_hint_x: .9
							source: "images/resistor_serial.png"
						Check:
							id: chk_serial
							group: 'group_connect'
                            pos_hint: {'center_y': .5}
                Widget:
                	size_hint_x: .05
				BoxLayout:
					orientation: 'vertical'
					size_hint_x: .15

					MDLabel:
						text: "Max:"
					MDLabel:
						text: "Min:"
				BoxLayout:
					orientation: 'vertical'
					size_hint_x: .15
					
					MDLabel:
						text: app.value_max
					MDLabel:
						text: app.value_min
				Widget:
                	size_hint_x: .05

				MDLabel:
					id: count_label
					size_hint_x: .1
					text: app.count
					font_size: sp(30)
				BoxLayout:
					orientation: 'vertical'
					spacing: dp(5)
					size_hint_x: .2

					MDRaisedButton:
						size_hint_y: 1
						size_hint_x: .7
						pos_hint: {'center_y': .5}
						text: '+'
						on_release:
							app.change_count(1)
					MDRaisedButton:
						size_hint_y: 1
						size_hint_x: .7
						pos_hint: {'center_y': .5}
						text: '-'
						on_release:
							app.change_count(-1)
			BoxLayout:
				size_hint_y: .1
				padding: [dp(20), dp(5), dp(20), dp(5)]
				spacing: dp(10)

				MDRaisedButton:
					id: e24_button
					name: 'e24_button'
					text: "5%"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .15
					md_bg_color: .55, .71, 0, 1
					on_release:
						app.tolerance_button_click(self)
				MDRaisedButton:
					id: e96_button
					name: 'e96_button'
					text: "1%"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .15
					md_bg_color: .55, .71, 0, 1
					on_release:
						app.tolerance_button_click(self)
				MDRaisedButton:
					id: e192_button
					name: 'e192_button'
					text: "0.5%"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .15
					md_bg_color: .55, .71, 0, 1
					on_release:
						app.tolerance_button_click(self)

				Widget:
					size_hint_x: .25

				MDRaisedButton:
					text: "Clear"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .25
					on_release:
						app.calc_combination()
				MDRaisedButton:
					text: "Go"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .25
					on_release:
						app.calc_combination()

			
			ScrollView:

				MDList:
					
					padding: [dp(10), dp(10), dp(10), dp(5)]
					id: box
					
					
					
															



	
	


	
