<ScreenManagement>:
    id: sm
	
	MainScreen:
		id: main_screen
		name: "main_screen"
		
		BoxLayout:
			orientation: "vertical"
			MDToolbar:
				title: "ResistorCombinator"

			ScrollView:
				BoxLayout:
					orientation: "vertical"
					size_hint_y: None
					padding: [dp(20),dp(10),dp(20),dp(20)]
					height: root.height
					BoxLayout:
						size_hint_y: .1
						padding: [0, dp(5), 0, dp(5)]
						spacing: dp(10)
						Image:
							size_hint_x: .2
							source: "images/resistor.png"
							pos_hint: {'center_x': .5}
						MDTextFieldRect:
							size_hint_x: .4
							text: '1'
							font_size: self.height - dp(15)
						MDRaisedButton:
							size_hint_x: .15
							size_hint_y: 1
							text: 'kOm'
							on_release:
								app.value_menu.open(self)
						MDRaisedButton:
							size_hint_x: .15
							size_hint_y: 1
							text: '5%'
							on_release:
								app.percent_menu.open(self)
						MDTextFieldRect:
							size_hint_x: .2
							text: '0.125'
							font_size: self.height - dp(15)
						MDLabel:
							size_hint_x: .05
							text: 'Вт'
					BoxLayout:
						size_hint_y: .15
						padding: [0, dp(5), 0, dp(5)]
						spacing: dp(10)
						Check:
							id: 'chk_parallel'
							group: 'group_connect'
                            pos_hint: {'center_y': .5}
                            active: True
						Image:
							source: "images/resistor_parallel.png"
						Check:
							id: 'chk_serial'
							group: 'group_connect'
                            pos_hint: {'center_y': .5}
						Image:
							source: "images/resistor_serial.png"
						Widget:
						Widget:
						Widget:
					Widget:

	
												
<Check@MDCheckbox>:
    size_hint: None, None
    size: dp(48), dp(48)
    allow_no_selection: False			
											
<MainScreen@Screen>:

<ValueDropDown>:
	MDRaisedButton:
        text: "mOm"
        on_release:
        	app.drop_menu.dismiss()
    MDRaisedButton:
        text: "Om"
        on_release:
        	app.drop_menu.dismiss()
    MDRaisedButton:
        text: "kOm"
        on_release:
        	app.drop_menu.dismiss()
    MDRaisedButton:
        text: "MOm"
        on_release:
        	app.drop_menu.dismiss()


<PercentDropDown>:
	MDRaisedButton:
    	text: "5%"
        on_release:
        	app.drop_menu.dismiss()
    MDRaisedButton:
        text: "1%"
        on_release:
        	app.drop_menu.dismiss()
    MDRaisedButton:
        text: "0.5%"
        on_release:
        	app.drop_menu.dismiss()


	
	


	
