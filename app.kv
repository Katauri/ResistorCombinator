<ScreenManagement>:
    id: sm
	
	MainScreen:
		id: main_screen
		name: "main_screen"
		
		BoxLayout:
			orientation: "vertical"
			MDToolbar:
				title: "ResistorCombinator"

			BoxLayout:
				size_hint_y: .13
				padding: [dp(10), dp(10), dp(10), dp(5)]

				spacing: dp(10)
				Image:
					size_hint_x: .2
					source: "images/resistor.png"
					pos_hint: {'center_x': .5}
				MDTextFieldRect:
					size_hint_x: .4
					text: app.value
					font_size: sp(self.height - sp(15))
					on_text:
						app.value = self.text
						app.resistor_change(dimension = None, tolerance = None)
				MDRaisedButton:
					id: dimension_button
					size_hint_x: .15
					size_hint_y: 1
					text: app.dimension
					on_release:
						app.dimension_menu.open(self)
				MDRaisedButton:
					id: tolerance_button
					size_hint_x: .15
					size_hint_y: 1
					text: app.tolerance
					on_release:
						app.tolerance_menu.open(self)
				MDTextFieldRect:
					size_hint_x: .2
					text: '0.125'
					font_size: sp(self.height - sp(15))
				MDLabel:
					size_hint_x: .05
					text: 'W'
			BoxLayout:
				size_hint_y: .2
				padding: [dp(10), dp(5), dp(10), dp(5)]
				spacing: dp(10)
				BoxLayout:
					size_hint_x: .5
					Image:
						source: "images/resistor_parallel.png"
					Check:
						id: chk_parallel
						group: 'group_connect'
                        pos_hint: {'center_y': .5}
                        active: True
				BoxLayout:
					size_hint_x: .5
					Image:
						source: "images/resistor_serial.png"
					Check:
						id: chk_serial
						group: 'group_connect'
                        pos_hint: {'center_y': .5}
				BoxLayout:

					MDLabel:
						text: "Max:"
					MDLabel:
						text: app.value_max
					Widget:
						size_hint_x: .2
					MDLabel:
						text: "Min:"
					MDLabel:
						text: app.value_min
				
				BoxLayout:
					orientation: 'vertical'
					spacing: dp(5)
					size_hint_x: .3

					MDRaisedButton:
						name: 'x2_button'
						id: x2_button
						size_hint_y: 1
						size_hint_x: 1
						pos_hint: {'center_y': .5}
						text: 'x2'
						md_bg_color: .73, .33, .83, 1
						on_release:
							app.change_count(2, self)
					MDRaisedButton:
						name: 'x3_button'
						id: x3_button
						size_hint_y: 1
						size_hint_x: 1
						pos_hint: {'center_y': .5}
						text: 'x3'
						md_bg_color: .75, .75, .75, 1
						on_release:
							app.change_count(3, self)
			BoxLayout:
				size_hint_y: .11
				padding: [dp(10), dp(5), dp(10), dp(5)]
				spacing: dp(10)

				MDRaisedButton:
					id: e24_button
					name: 'e24_button'
					text: "5%"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .15
					md_bg_color: .55, .71, 0, 1
					on_release:
						app.tolerance_button_click(self)
				MDRaisedButton:
					id: e96_button
					name: 'e96_button'
					text: "1%"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .15
					md_bg_color: .55, .71, 0, 1
					on_release:
						app.tolerance_button_click(self)
				MDRaisedButton:
					id: e192_button
					name: 'e192_button'
					text: "0.5%"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .15
					md_bg_color: .55, .71, 0, 1
					on_release:
						app.tolerance_button_click(self)

				Widget:
					size_hint_x: .25

				MDRaisedButton:
					text: "Clear"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .25
					on_release:
						app.clear()
				MDRaisedButton:
					text: "Go"
					pos_hint: {'center_x': .5}
					size_hint_y: 1
					size_hint_x: .25
					on_release:
						app.calc_combination()

			
			ScrollView:
				id: scrlv
				
				TextInput:
					id: textbox
					multiline: True
					readonly: True
					size_hint: 1, None
					height: max(self.minimum_height, scrlv.height)
					background_color: (1, 1, 1, 1)
					text: ' '

			BoxLayout:
				size_hint_y: .11
				padding: [dp(10), dp(5), dp(10), dp(5)]
				spacing: dp(10)
				
				MDLabel:
					size_hint_x: .5
					halign: 'center'
					id: caption_pagination
					text: '1/1'
				
				MDRaisedButton:
					size_hint_y: 1
					pos_hint: {'center_y': .5}
					text: '<Prev'
					on_release:
						app.view_prev_chunk()

				MDRaisedButton:
					size_hint_y: 1
					pos_hint: {'center_y': .5}
					text: 'Next>'
					on_release:
						app.view_next_chunk()
				

					
					
					
															



	
	


	
