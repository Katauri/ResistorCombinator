					
<Check@MDCheckbox>:
    size_hint: None, None
    size: dp(48), dp(48)
    allow_no_selection: False			
											
<MainScreen@Screen>:


<DimensionDropDown>:
    auto_width: False

	MDRaisedButton:
        text: "mOm"
        md_bg_color: 0.32,.67,.95, 1
        
        on_release:
        	app.resistor_change(dimension = 'mOm', tolerance = None)
        	app.dimension_menu.dismiss()
    MDRaisedButton:
        text: "Om"
        md_bg_color: 0.32,.67,.95, 1
       
        on_release:
        	app.resistor_change(dimension = 'Om', tolerance = None)
        	app.dimension_menu.dismiss()
    MDRaisedButton:
        text: "kOm"
        md_bg_color: 0.32,.67,.95, 1
        
        on_release:
        	app.resistor_change(dimension = 'kOm', tolerance = None)
        	app.dimension_menu.dismiss()
    MDRaisedButton:
        text: "MOm"
        md_bg_color: 0.32,.67,.95, 1
        
        on_release:
        	app.resistor_change(dimension = 'MOm', tolerance = None)
        	app.dimension_menu.dismiss()


<ToleranceDropDown>:
    auto_width: False
    

    MDRaisedButton:
        text: "10%"
        md_bg_color: 0.32,.67,.95, 1

        
        on_release:
            app.resistor_change(tolerance = 10, dimension = None)
            app.tolerance_menu.dismiss()
	MDRaisedButton:
    	text: "5%"
        md_bg_color: 0.32,.67,.95, 1
        
       
        on_release:
        	app.resistor_change(tolerance = 5, dimension = None)
        	app.tolerance_menu.dismiss()
    MDRaisedButton:
        text: "1%"
        md_bg_color: 0.32,.67,.95, 1
        
        on_release:
        	app.resistor_change(tolerance = 1, dimension = None)
        	app.tolerance_menu.dismiss()
    MDRaisedButton:
        text: "0.5%"
        md_bg_color: 0.32,.67,.95, 1
       
        on_release:
        	app.resistor_change(tolerance = 0.5, dimension = None)
        	app.tolerance_menu.dismiss()



    



	
	


	
